<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Work Order</title>
  <style>
    * {
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      /* margin: 0px; */
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    .company-info {
      display: flex;
      align-items: center;
    }

    .company-info img {
      width: 150px;
    }

    .company-details {
      font-size: 16px;
    }

    .work-order {
      text-align: right;
    }

    .work-order h2 {
      text-decoration: underline;
      margin: 0;
    }

    .work-order strong {
      font-size: 24px;
    }

    .order-date {
      text-align: right;
      margin-top: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th,
    td {
      border: 1px solid #000;
      padding: 6px;
      text-align: center;
      font-size: 14px;
    }

    .urgent-row {
      background-color: #e0e0e0;
      font-weight: bold;
      text-align: left;
      padding: 8px;
    }

    .title-row {
      font-weight: bold;
      text-align: center;
      font-size: 18px;
      text-decoration: underline;
      padding: 10px;
    }

    .no-border {
      border: none;
    }

    .summary-title {
      font-weight: bold;
      text-decoration: underline;
      margin-top: 20px;
      margin-bottom: 5px;
    }

    .summary-table th,
    .summary-table td {
      border: 1px solid #aaa;
      font-size: 14px;
    }

    .summary-table {
      border-collapse: collapse;
      width: 100%;
    }

    .vertical-bar {
      width: 70px;
    }

    @media print {
      thead {
        display: table-header-group;
      }

      tfoot {
        display: table-footer-group;
      }

      tr {
        page-break-inside: avoid;
      }
    }
  </style>
</head>

<body>
  <div class="work-order">
    <h2 style="text-align:center;">WORK ORDER</h2>
  </div>
  <div class="top-bar">
    <div class="company-info">
      <img src="{{logoUrl}}" alt="Logo" />
      <div class="company-details">
        <h4 style="font-size: 20px;"><strong>Turakhia Overseas Private Limited</strong></h4><br />
        <div style="display: flex;">
          <strong>Customer Name </strong>
          <h4 style="margin: 0;text-decoration: underline; margin-left: 1%;">{{order.owner_name}}</h4>
        </div>
      </div>
    </div>

    <div class="work-order">

      <div>Work Order No : <strong style="font-size: 28px;">{{order.order_no}}</strong></div>
      <div class="order-date">Order Date: <strong
          style="font-size: 15px; font-weight: 500;">{{order.orderDateFormatted}}</strong></div>
    </div>
  </div>

  <div style="display: flex; justify-content: space-between; align-items: center; margin: 10px 0;">
    <div>
      <h2 style="font-weight: bold; text-decoration: underline; margin: 0;">URGENT</h2>
    </div>
    <div class="title-row" style="font-weight: bold; font-size: 18px; text-decoration: underline;">
      Decorative Plywood
    </div>
  </div>
  <div style="display: flex;">
    <table>
      <thead>
        <tr style="text-decoration: underline;">
          <th>Series</th>
          <th>Sales/Itemname</th>
          <th>Photo Number</th>
          <th>LogX</th>
          <th>Character</th>
          <th>Length</th>
          <th>Width</th>
          <th>Sheet</th>
          <th>SqMtr</th>
          <th>Remarks</th>
        </tr>
      </thead>

      <tbody>
        {{#each items}}
        <tr>
          <td>{{series_name}}</td>
          <td>{{item_name}}</td>
          <td style="font-weight: 800;">{{photo_number}}</td>
          <td>{{group_no}}</td>
          <td>{{character}}</td>
          <td>{{length}}</td>
          <td>{{width}}</td>
          <td>{{no_of_sheets}}</td>
          <td>{{sqm}}</td>
          <td>{{remark}}</td>
        </tr>
        {{/each}}
        <tr>
          <td colspan="7" style="text-align: right; font-weight: bold;">Total :</td>
          <td>{{totalSheets}}</td>
          <td>{{totalSqMtr}}</td>
          <td colspan="6"></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="summary-title">Order Summary</div>
  <table class="summary-table" cellspacing="0" cellpadding="6" style="border-collapse: collapse; width: 100%;">
    <thead>
      <tr>
        <td class="vertical-bar"></td>
        <td colspan="3"></td>
        <th>Sheet</th>
        <th>Sq.Mtr.</th>
      </tr>
    </thead>

    <tbody>
      {{#each groupedSeries}}
      {{#each items}}
      <tr>
        <td class="vertical-bar"></td>
        <td>
          {{!-- {{#if @first}}{{../series_name}}{{/if}} --}}
          {{../series_name}}
        </td>
        <td colspan="2" style="text-align: left;">{{item_name}}</td>
        <td style="text-align: right;"><strong>{{no_of_sheets}}</strong></td>
        <td style="text-align: right;"><strong>{{sqm}}</strong></td>
      </tr>
      {{/each}}
      {{/each}}

      <tr>
        <td class="vertical-bar"></td>
        <td></td>
        <td colspan="2" style="font-weight: bold; text-align: left;">Total</td>
        <td style="text-align: right; font-weight: bold;">{{totalSheets}}</td>
        <td style="text-align: right; font-weight: bold;">{{totalSqMtr}}</td>
      </tr>
      <tr>
        <td class="vertical-bar"></td>
        <td colspan="3" style="font-weight: bold; text-align: left;">Total</td>
        <td style="text-align: right; font-weight: bold;">{{totalSheets}}</td>
        <td style="text-align: right; font-weight: bold;">{{totalSqMtr}}</td>
      </tr>
      <tr>
        <td colspan="4" style="font-weight: bold; text-align: left;">Total</td>
        <td style="text-align: right; font-weight: bold;">{{totalSheets}}</td>
        <td style="text-align: right; font-weight: bold;">{{totalSqMtr}}</td>
      </tr>
    </tbody>
  </table>
</body>

</html>
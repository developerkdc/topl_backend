<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Packing Details Report</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    img.banner {
      width: 100%;
      max-width: 1000px;
      height: auto;
      display: block;
      margin: 0 auto 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }

    .table-1{
      margin-top: 50px;
      margin-bottom: 150px;
    }

    th,
    td {
      border: 1px solid #000;
      padding: 8px;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #f2f2f2;
    }

    h2 {
      margin-top: 40px;
    }

    @media print {
      body {
        margin-top: 160px;
        margin-bottom: 100px;
      }

      .banner-header,
      .banner-footer {
        position: fixed;
        left: 0;
        width: 100%;
        z-index: 9999;
      }

      .banner-header {
        top: 0;
        height: 150px;
      }

      .banner-footer {
        bottom: 0;
        height: 100px;
      }

      .screen-only {
        display: none;
      }
    }
  </style>
</head>

<body>

  <img src="{{headerUrl}}" alt="Header Banner" class="banner-header">

  <div class="outer">
    <h3>
      Packing Details Report Date: {{packing_date}} &nbsp;&nbsp;
      Packing Id: {{packing_id}} &nbsp;&nbsp;
      Customer Name: {{customer_name}}
    </h3>

    <p><b>
        Product Category: {{product_category}}
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        {{remark}}
      </b></p>

    <!-- Items Table -->
    <table class="table-1">
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Photo No.</th>
          <th>Pressing ID</th>
          <th>Length</th>
          <th>Width</th>
          <th>Sheet</th>
          <th>Sq Mtr</th>
          <th>Bund. No</th>
          {{!-- <th>Bundles</th>
          <th>No of Bund.</th> --}}
          <th>Remarks</th>
        </tr>
      </thead>
      <tbody>
        {{#each packing_done_item_details}}
        <tr>
          <td>{{item_name}}</td>
          <td>{{photo_no}}</td>
          <td>{{pressing_id}}</td>
          <td>{{new_length}}</td>
          <td>{{new_width}}</td>
          <td>{{no_of_sheets}}</td>
          <td>{{sqm}}</td>
          {{!-- <td>{{bundle_no}}</td>
          <td>{{bundles}}</td> --}}
          <td>{{no_of_bundles}}</td>
          <td>{{remark}}</td>
        </tr>
        {{/each}}

        <tr>
          <td>{{customer_name}}</td>
          <td colspan="4"></td>
          <td>{{totalSheets}}</td>
          <td>{{totalSqMtr}}</td>
          <td colspan="4"></td>
        </tr>
        <tr>
          <td colspan="5">Grand Total</td>
          <td>{{totalSheets}}</td>
          <td>{{totalSqMtr}}</td>
          <td colspan="4"></td>
        </tr>
      </tbody>
    </table>

    <!-- Item + Size wise Summary -->
    <h2 style="text-decoration: underline; font-size: 20px;">Item + Size wise Summary</h2>

    <table>
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Size</th>
          <th>Sheets</th>
          <th>Sq Mtr</th>
        </tr>
      </thead>
      <tbody>
        {{#each item_summary}}
        <tr>
          <td>{{item_name}}</td>
          <td>{{size}}</td>
          <td>{{sheets}}</td>
          <td>{{sqm}}</td>
        </tr>
        {{/each}}
        <tr>
          <td colspan="2">Total</td>
          <td>{{totalSheets}}</td>
          <td>{{totalSqMtr}}</td>
        </tr>
      </tbody>
    </table>

  </div>

  <img src="{{footerUrl}}" alt="Footer Banner" class="banner-footer">
</body>

</html>